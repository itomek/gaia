{
  "name": "gaia-electron-tests",
  "version": "1.0.0",
  "description": "Automated tests for GAIA Electron framework and apps",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "../../src/gaia/electron/**/*.js",
      "../../src/gaia/apps/**/webui/src/**/*.js",
      "!../../src/gaia/apps/**/webui/src/renderer/**/*.js",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/out/**"
    ],
    "testMatch": [
      "**/*.test.js",
      "**/test_*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "setupFilesAfterEnv": [
      "./setup.js"
    ],
    "moduleNameMapper": {
      "^electron$": "<rootDir>/mocks/electron.js"
    }
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "author": "AMD AI Group",
  "license": "MIT"
}
